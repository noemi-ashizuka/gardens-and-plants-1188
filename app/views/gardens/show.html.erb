<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-8">
      <% if @plants.any? %>
        <div class="container">
          <div class="row">
            <% @plants.each do |plant| %>
              <%= render "gardens/plant", plant: plant %>
            <% end %>
          </div>
        </div>
      <% else %>
        <h2>No plants in this garden yet, add some!</h2>
        <p>TODO: Display the plants here</p>
      <% end %>
    </div>
    <div class="col-4">
      <h2>Add a plant:</h2>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
